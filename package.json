{
	"name": "jdg-ui-svelte",
	"version": "1.4.5",
	"license": "MIT",
	"repository": "github:deanstein/jdg-ui-svelte",
	"homepage": "https://github.com/deanstein/jdg-ui-svelte#readme",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"build:static": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"prettier": "prettier --write \"{,!(node_modules|public|dist)/**/}*.{js,svelte}\"",
		"prettier:check": "prettier --check \"{,!(node_modules|public|dist)/**/}*.{js,svelte}\"",
		"format": "prettier --write .",
		"list-versions": "node src/lib/tools/list-versions/run-list-versions.js",
		"backfill": "node src/lib/tools/backfill/run-backfill.js"
	},

	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},

	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.19",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@emotion/css": "^11.11.2",
		"crypto-js": "^4.2.0",
		"d3": "^7.8.5",
		"svelte-meta-tags": "^3.1.4",
		"uuid": "^9.0.0"
	}
}
